#-----------------------------------------------------Part 6; Exercise #5
#submitted by: Jared
#updated by:
#verified by: Laura

SELECT product_name, discount_percent
FROM products
WHERE discount_percent IN(
SELECT discount_percent
FROM products
GROUP BY discount_percent
HAVING count(discount_percent) = 1)
ORDER BY product_name;

