#submitted by: Jared
#updated by:
#verified by: Lauraw

SELECT a.product_name, a.list_price
FROM products a JOIN products b
ON a.list_price = b.list_price
WHERE NOT a.product_code = b.product_code AND a.list_price = b.list_price
ORDER BY a.product_name;

